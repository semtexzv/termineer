FROM rust:1.75-slim as builder
WORKDIR /app

# Copy Cargo configuration
COPY Cargo.toml Cargo.lock ./

# Copy source code and templates
COPY src ./src/
COPY templates ./templates/
COPY migrations ./migrations/

# Create the static directory
RUN mkdir -p static/js

# Download HTMX for the static directory
RUN apt-get update && apt-get install -y curl
RUN curl -s https://unpkg.com/htmx.org@1.9.10/dist/htmx.min.js -o static/js/htmx.min.js

# Build the application
RUN cargo build --release

# Create a minimal runtime image
FROM debian:bullseye-slim
WORKDIR /app

# Install dependencies
RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*

# Copy the binary from builder
COPY --from=builder /app/target/release/autoswe-server /app/autoswe-server

# Copy templates and static files
COPY --from=builder /app/templates /app/templates
COPY --from=builder /app/static /app/static
COPY --from=builder /app/migrations /app/migrations

# Expose the port
EXPOSE 8080

# Environment variables
ENV PORT=8080

# Start the server
CMD ["/app/autoswe-server"]